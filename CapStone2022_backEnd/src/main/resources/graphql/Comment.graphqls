extend type Query {
    comments : [Comment]
    getCommentsByPostId(id : ID!) : [Comment]
}

extend type Mutation {
    addComment(commentDto : commentInput!) : Comment
    updateComment(id : ID!, commentDto : commentInput!) : Comment
    deleteComment(id : ID!) : Comment
}

type Comment {
    id : ID!
    post : Post!
    member : Member!
    content : String!
}

input commentInput {
    postId : Int!
    memberId : Int!
    content : String!
}